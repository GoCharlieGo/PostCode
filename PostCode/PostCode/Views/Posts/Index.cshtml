@model IEnumerable<PostCode.Models.Post>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>All Posts</h2>

<table class="table">
@foreach (var item in Model) {
    <tr>
        <td style="width: 100px; vertical-align: middle">
            <div style="text-align: center">Rating</div>
        </td>
        <td style="vertical-align: middle">
            <div class="row">
                <div class="col-md-10" style="text-align: left">
                   <h4> @Html.ActionLink(item.Name, "Details", new { id = item.Id })</h4>
                </div>
            </div>
            <div class="row">
                <div class="col-md-4 col-md-offset-8" style="text-align:right">Created by @Html.DisplayFor(modelItem => item.ApplicationUser.Email)</div>
                <div class="col-md-4 col-md-offset-8" style="text-align:right">at @Html.DisplayFor(modelItem => item.Data)</div>
            </div>
        </td>
    </tr>
}
</table>
